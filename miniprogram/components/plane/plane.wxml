<view class="plane" bindtouchstart="onTouchStart" bindtouchmove="onTouchMove" bindtouchend="onTouchEnd">
  <!-- <image src="../../assets/images/bg.svg"></image> -->
  <!-- <image src="../../assets/images/p1.svg"></image> -->
  <view class="plane-wrapper">
    <image class="plane-bg" src="../../assets/images/bg.svg" style="{{status !== 'prepare' ? '' : 'transform: scaleX(-1) scaleY(-1)'}}"></image>
    <image wx:if="{{status !== 'prepare'}}" class="plane-icon" src="../../assets/images/p2.svg"></image>
    <image wx:else class="plane-icon" src="../../assets/images/p1.svg"></image>

    <text class="plane-header">{{placeholder[0]}}</text>

    <text class="plane-tips">{{placeholder[1]}}</text>
  </view>

  <button
    wx:if="{{status === 'welcome'}}"
    open-type="getUserInfo" 
    bindgetuserinfo="onGetUserInfo"
    class="plane-button">
    {{placeholder[2]}}
  </button>

  <button
    wx:if="{{status === 'sended'}}"
    class="plane-button"
    bindtap="goToRecieveComfort">
    {{placeholder[2]}}
  </button>

  <button
    wx:if="{{status === 'recieve-mood'}}"
    class="plane-button"
    bindtap="goToComfort">
    {{placeholder[2]}}
  </button>
</view>
